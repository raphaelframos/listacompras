<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/margin_default"
    android:layout_margin="@dimen/margin_default"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatTextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_date"
        android:id="@+id/text_view_price"
        style="@style/Label"
        tools:text="R$ 100,00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        app:layout_constraintStart_toStartOf="@+id/text_view_price"
        app:layout_constraintEnd_toEndOf="@+id/text_view_price"
        app:layout_constraintTop_toBottomOf="@+id/text_view_price"
        android:id="@+id/text_view_place"
        tools:text="Fluminense"
        style="@style/LabelSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/text_view_date"
        tools:text="10/10/2020"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        app:layout_constraintStart_toStartOf="@+id/text_view_place"
        app:layout_constraintEnd_toEndOf="@+id/text_view_place"
        app:layout_constraintTop_toBottomOf="@+id/text_view_place"
        android:id="@+id/text_view_observation"
        tools:text="Omo"
        android:textSize="13sp"
        style="@style/LabelSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>